<h1>Results for <%= @query %> </h1>

<% if @tweets && !@tweets.size != 0 %>
<table>
  <tr>
    <th>Tweetid</th>
    <th>Body</th>
    <th>Tweeted on</th>
    <th>Author</th>
    <th></th>
  </tr>

<% @tweets.each do |tweet| %>
  <tr>
    <td><%= tweet.tweetid %></td>
    <td><%= tweet.body %></td>
    <td><%= tweet.tweeted_on %></td>
    <td><%= tweet.author %></td>
    <td><%= link_to 'Show', tweet %></td>
  </tr>
<% end %>
</table>

<br />
<% else %>

<p>No results returned.</p>

<% end %>
<%= link_to 'New Tweet', new_tweet_path %>
